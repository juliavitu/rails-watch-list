<div class="container">
  <h1>Movies from list <%= @list.name %></h1>
    <div class="card" style="width: 18rem;">
      <% @list.bookmarks.each do |bookmark| %>
        <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= bookmark.movie.rating %></li>
      <% end %>
        </ul>
      <div class="card-body">
        <a href="/lists/:list_id/bookmarks/new" class="card-link">create a bookmark</a>
        <a href="/bookmarks/:id" class="card-link">Delete</a>
      </div>
